<div class="signup-body w-50 mx-auto">
  <div class="signup-form">
    <h2>Register</h2>
    <p class="hint-text">Create your account. It's free and only takes a minute.</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login-form'}) do |f| %>
      <%= f.error_notification %>
        <div class="form-group">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        </div>
        <div class="form-group">
        <%= f.input :surname,
                    required: true,
                    autofocus: true
                    %>
        </div>
        <div class="dropdown">
        <%= f.input :city_id do %>
          <%= f.select :city_id, City.all.map { |c| [c.name, c.id, input_html: { class: "btn btn-secondary dropdown-toggle"}]}%>
        <% end %>
        </div>
        <div class="form-group">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    class: "form-control",
                    input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-group">
        <%= f.input :password,
                    required: true,
                    class: "form-control",
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-group">
        <%= f.input :password_confirmation,
                    required: true,
                    class: "form-control",
                    input_html: { autocomplete: "new-password" } %>
        </div>
         <div class="form-group">
         <%= f.file_field :picture %>
        </div>

      <div class="clear-fix">
        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
