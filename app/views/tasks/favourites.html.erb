<div class="page container mt-4
">
	<% if @favourite_tasks.any? %>
		<h1 class="text-white text-center">Your favourited tasks</h1>
		<% @favourite_tasks.each do |task| %>
			<%= render 'task', task: task %>
		<% end %>
	<% else %>
		<div class="container">
		<h1 class="text-white text-center mt-4">You've got no tasks favourited!</h1>
				
		<div class='mx-auto'>
				<%= image_tag "happy.png", width: "350px", alt: "Happy lady", class: "rounded mx-auto d-block"  %>
		</div>

		<div class="card container p-3">
			<h2 class="text-center">Where would you like to go?</h2>
			<div class="row d-flex justify-content-between w-75 mx-auto">
				<%= link_to 'Dashboard', dashboard_path, class: "btn btn-primary col-lg-3" %>
				<%= link_to 'Home', '/', class: "btn btn-primary col-lg-3 mx-2" %>
				<%= link_to 'Tasks', tasks_path, class: "btn btn-primary col-lg-3 mx-2" %>
			</div>
		</div>
	<% end %>
</div>