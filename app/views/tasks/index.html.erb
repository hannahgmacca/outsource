<div class="container">

	<p id="notice"><%= notice %></p>

	<h1>Tasks near you</h1>

	<% @tasks.each do |task| %>
		<div class="py-4">
			<div class="card w-50">
				<div class="card-header" >
					<td><%= task.category.title %></td>
				</div>

				<div class="card-body">
					<div class="h2">
						<%= task.title %>
				</div>

					<div class="card-text">
						<%= task.description %>
					</div>
			
					<div class="card-text">
					<p>
						$<%= task.price %>
					</p>
					</div>

					<%= task.user.first_name %> <%= task.user.surname %>
					<br><br>

					<div class="comment-count">
          				<span class="tag is-rounded"><%= task.comments.count %> comments</span>
         			</div>

					<div class="favourite-count">
          			<span class="tag is-rounded">
					<% if task.favoritable_score.values.empty? %>
						0 favourites
					<% else %>
						<%= task.favoritable_score.values[0] %>
						favourites</span>
					<%end%>
					</div>

				<%= link_to toggle_favorite_task_path(task), remote: true, method: :post do %>
					<%= render 'tasks/like_button', task: task %>
				<% end %>

					<% if current_user.has_applied?(task.id) %>
						<div class="alert" role="alert">Applied</div>
				<% else %>
						<%= link_to 'Apply', new_application_path(task_id: task.id, user_id: current_user), class: "btn btn-primary" %>
				<% end %>
				<%= link_to 'Show', task, class: "btn btn-primary" %>
				<%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %>
				<%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"%>
				</div>
			</div>
		</div>
	<% end %>

	<br>
</div>