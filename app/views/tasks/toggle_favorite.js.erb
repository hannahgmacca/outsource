var taskId = '<%= @task.id %>'

function toggleLikeButton(taskId, favoritedTask) {
  let likeButton = document.querySelector(`.like-icon[data-id='${taskId}']`)
  likeButton.classList.toggle('red');
  if (likeButton.classList.contains('red')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedTask)
  }
  else {
    document.querySelector(`.favorite[data-id='${cocktailId}']`).remove()
  }
}

toggleLikeButton(taskId, '<%= j render "tasks/task", task: @task %>');